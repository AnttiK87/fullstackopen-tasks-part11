{
  "name": "part-11",
  "version": "1.0.0",
  "description": "Full stack open part 11 tasks",
  "main": "index.js",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "test": "cross-env NODE_ENV=test node --test",
    "test:e2e": "cross-env NODE_ENV=test playwright test",
    "test:report": "playwright show-report",
    "build:ui": "@powershell if (Test-Path dist) { Remove-Item -Recurse -Force dist } && cd ./frontend && npm run build && @powershell Copy-Item dist -Recurse ../../full-stack-open-bloglist-part-11",
    "build:ui:deployment": "rm -rf dist && cd ./frontend && npm run build && cp -r dist ../../fullstackopen-tasks-part11",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && git push",
    "lint": "eslint \"./**/*.{js,jsx}\"",
    "start:test": "cross-env NODE_ENV=test node index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AnttiK87/fullstackopen-tasks-part5.git"
  },
  "author": "Antti Kortelainen",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/AnttiK87/fullstackopen-tasks-part5/issues"
  },
  "homepage": "https://github.com/AnttiK87/fullstackopen-tasks-part5#readme",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@playwright/test": "^1.49.1",
    "@types/node": "^22.10.6",
    "cross-env": "^7.0.3",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "globals": "^15.11.0",
    "nodemon": "^3.1.7",
    "prettier": "3.3.3",
    "supertest": "^7.0.0"
  }
}
